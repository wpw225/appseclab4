{% extends "base.html" %}

{% block content %}

{% with messages = get_flashed_messages() %}
{% if messages %}
<ul>
        {% for message in messages %}
	{% if "Registration" in message %}
        <li id="success">{{ message }}</li>
	{% else %}
	<li id="result">{{ message }}</li>
	{% endif %}
        {% endfor %}
</ul>
{% endif %}
{% endwith %}

{% if output %}
<h1>
	
        {% if "Registration" in output %}
        <p id="success">{{ output }}</p>
        {% else %}
        <p id="result">something{{ output }}</p>
        {% endif %}
</h1>
{% endif %}

    <h1>Sign In</h1>
    <form action="" method="post" novalidate>
        {{ form.hidden_tag() }}
        <p>
            {{ form.uname.label }}<br>
            {{ form.uname(size=32) }}<br>
            {% for error in form.uname.errors %}
            <span style="color: red;">[{{ error }}]</span>
            {% endfor %}
        </p>
        <p>
            {{ form.pword.label }}<br>
            {{ form.pword(size=32) }}<br>
            {% for error in form.pword.errors %}
            <span style="color: red;">[{{ error }}]</span>
            {% endfor %}
        </p>
        <p>
            {{ form.pword2.label }}<br>
            {{ form.pword2(size=32) }}<br>
            {% for error in form.pword2.errors %}
            <span style="color: red;">[{{ error }}]</span>
            {% endfor %}
        </p>

        <p>{{ form.submit() }}</p>
	<p>New User? <a href="{{ url_for('register') }}">Click to Register!</a></p>
    </form>
{% endblock %}
